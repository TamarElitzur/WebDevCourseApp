<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Videos // Module</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Helper for the search area loading state */
        .loading-text {
            text-align: center;
            color: #64748b;
            margin-top: 20px;
            font-style: italic;
        }
    </style>
</head>
<body>

    <nav class="navbar flex-between">
        <a href="/" class="nav-brand">MVC // APP</a>
        <div class="flex-center" style="gap: 15px;">
            <a href="/" class="btn btn-outline" style="padding: 8px 16px;">Home</a>
            <form action="/auth/logout" method="POST">
                <button class="btn btn-outline" style="padding: 8px 16px;">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container">
        
        <div class="card" style="max-width: 100%; margin-bottom: 3rem;">
            <h2 style="margin-bottom: 1.5rem; color: var(--accent-color);">Find New Videos</h2>
            
            <div class="flex-between" style="gap: 15px; align-items: center;">
                <div style="flex-grow: 1;">
                    <input type="text" id="searchInput" placeholder="Search YouTube (e.g. 'Music')...">
                </div>
                <button class="btn" onclick="searchYouTube()" style="width: auto; padding: 14px 40px;">Search</button>
            </div>

            <div id="resultsArea" class="video-grid"></div>
        </div>

        <h2 style="border-bottom: 2px solid var(--border-color); padding-bottom: 10px;">My Playlist</h2>
        
        <div class="video-grid">
            <% if (favorites.length === 0) { %>
                <p style="color: #64748b; grid-column: 1 / -1;">No videos saved yet. Search above to add some!</p>
            <% } %>

            <% favorites.forEach(video => { %>
                <div class="video-card">
                    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; background: #000;">
                        <iframe 
                            src="https://www.youtube.com/embed/<%= video.videoId %>" 
                            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0;"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                            allowfullscreen>
                        </iframe>
                    </div>

                    <div style="padding: 20px;">
                        <h4 style="margin-bottom: 15px; font-size: 1rem; color: var(--text-color); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            <%= video.title %>
                        </h4>
                        <form action="/videos/delete" method="POST">
                            <input type="hidden" name="id" value="<%= video.id %>">
                            <button class="btn btn-danger" style="padding: 10px;">Remove Video</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        async function searchYouTube() {
            const query = document.getElementById('searchInput').value;
            const resultsDiv = document.getElementById('resultsArea');
            
            if (!query) return alert("Please enter a search term");

            // Show loading state
            resultsDiv.innerHTML = '<p class="loading-text">Searching YouTube...</p>';

            try {
                // Call your backend API
                const res = await fetch(`/videos/search?q=${encodeURIComponent(query)}`);
                const videos = await res.json();

                resultsDiv.innerHTML = ''; // Clear loading message

                if (!videos || videos.length === 0) {
                    resultsDiv.innerHTML = '<p class="loading-text">No results found.</p>';
                    return;
                }

                // Loop through results and build HTML matching your .video-card style
                videos.forEach(video => {
                    // Safety check for video ID
                    const videoId = video.id.videoId;
                    if (!videoId) return; 

                    const title = video.snippet.title;
                    const thumb = video.snippet.thumbnails.medium.url;

                    // Create the HTML card
                    const cardHtml = `
                        <div class="video-card">
                            <img src="${thumb}" style="width: 100%; aspect-ratio: 16/9; object-fit: cover;">
                            <div style="padding: 20px;">
                                <h4 style="margin-bottom: 15px; font-size: 1rem; color: var(--text-color); white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    ${title}
                                </h4>
                                <form action="/videos/add" method="POST">
                                    <input type="hidden" name="youtubeId" value="${videoId}">
                                    <input type="hidden" name="title" value="${title}">
                                    <input type="hidden" name="thumbnailUrl" value="${thumb}">
                                    <button class="btn" style="padding: 10px;">Add to Playlist +</button>
                                </form>
                            </div>
                        </div>
                    `;
                    
                    // Add to grid
                    resultsDiv.innerHTML += cardHtml;
                });

            } catch (err) {
                console.error(err);
                resultsDiv.innerHTML = '<p class="alert-error">Error fetching results from server.</p>';
            }
        }
    </script>